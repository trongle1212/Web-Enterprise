@model List<Core.DTO.File.FileDTO>
@using Core.Common.Extentions
@using Core.Common.Enum
@{
    ViewBag.Title = "Dách sách chứng nhận";
}
<style>
    .table td, .table th {
        vertical-align: middle !important;
    }
</style>
<div class="breadcrumb-area pt-10 pb-10 border-bottom mb-40">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-content">
                    <ul>
                        <li class="has-child"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                        <li class=""><a href="#">Danh sách chứng nhận hội sản xuất và kinh doanh Cam Cao Phong</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="page-wrapper-light-green">
    <!--==================== page content ====================-->
    <div class="page-section pb-40">
        <div class="container">
            <div class="row" style="padding: 30px 0px 0px 0px;">
                <div class="col-lg-12 order-1">
                    <!--=======  shop page content  =======-->
                    <div class="">
                        <table class="table table-bordered" style="width: 100%; ">
                            <tbody>
                                <tr style="text-align: center; ">
                                    <th>MÃ CHỨNG NHẬN</th>
                                    <th>THÀNH VIÊN</th>
                                    <th>THỜI GIAN CHỨNG NHẬN</th>
                                    <th>CHỨC NĂNG</th>
                                </tr>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr style="text-align: center; ">
                                            <td>
                                                <a href="#" style="text-transform: uppercase !important; font-size: 16px !important;">
                                                    <strong> @item.RegistrationNumber</strong>
                                                </a>
                                            </td>
                                            <td>
                                                <a href="#" style="text-transform: uppercase !important; font-size: 16px !important;">
                                                    <strong> @item.FullName</strong>
                                                </a>
                                            </td>
                                            <td>
                                                <a href="#">@item.ExpiredDay.Value.ToString("dd-MM-yyyy")</a>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("CertificationDetail", "Home", new { q= item.Id })" class="theme-button list-cart-button" style="background-color: #49b14d !important">Xem chi tiết</a>
                                            </td>
                                        </tr>

                                    }
                                }
                            </tbody>
                        </table>
                        <!--=======  End of grid view product  =======-->
                    </div>
                    <!--=======  End of shop page content  =======-->
                    <!--=======  pagination  =======-->
                    @*<div class="pagination-section mb-md-30 mb-sm-30">
                            <ul class="pagination">
                                <li class="active"><a href="#">1</a></li>
                                <li><a href="#">2</a></li>
                                <li><a href="#">></a></li>
                                <li><a href="#">>|</a></li>
                            </ul>

                            <div class="pagination-text">
                                Showing 1 to 9 of 15 (2 Pages)
                            </div>
                        </div>*@
                    <!--=======  End of pagination  =======-->
                </div>
            </div>
        </div>
    </div>
</div>
